<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Recursos BookStyles  -->
    <Style x:Key="TB_Register" TargetType="TextBox">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="Margin" Value="20,0,0,0" />
        <Setter Property="Width" Value="250" />
        <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style x:Key="DP_DateReg" TargetType="DatePicker">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="Margin" Value="20,0,0,0" />
        <Setter Property="Width" Value="250" />
        <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="BorderThickness" Value="0,0,0,0" />
    </Style>

    <Style x:Key="TXT_Info" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Microsoft JhengHei UI" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="BOR_ContBorder" TargetType="Border">
        <Setter Property="Background" Value="#66000000" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="60,0,40,0" />
        <Setter Property="Padding" Value="30,20,0,20" />
    </Style>

    <Style x:Key="BT_Confirm" TargetType="Button">
        <Setter Property="Margin" Value="0,70,0,0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Padding" Value="50,10,50,10" />
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="White" />
    </Style>
</ResourceDictionary>