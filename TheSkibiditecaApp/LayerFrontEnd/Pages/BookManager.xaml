<Page
    x:Class="TheSkibiditecaApp.Windows.BookManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheSkibiditecaApp.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BookManager"
    Width="1366"
    Height="768"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="1" Color="#FFA000FF" />
                <GradientStop Offset="0" Color="#FF3800A7" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid
            Width="350.1"
            Margin="0,0,600,0"
            HorizontalAlignment="Left"
            Background="#FF4C0092">
            <StackPanel Margin="0,200,0,200">
                <Button x:Name="but_books" Style="{StaticResource BT_BarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="17,0,0,0" Source="/Images/book.png" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalContentAlignment="Center"
                            Content="Libros" />
                    </StackPanel>
                </Button>
                <Button x:Name="but_newbook" Style="{StaticResource BT_BarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="17,0,0,0" Source="/Images/plus.png" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalContentAlignment="Center"
                            Content="Añadir libro" />
                    </StackPanel>
                </Button>
                <Button x:Name="but_borrow" Style="{StaticResource BT_BarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="17,0,0,0" Source="/Images/borrow.png" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalContentAlignment="Center"
                            Content="Nuevo préstamo" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Label
                Margin="0,76,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="(LOGO) Skibiditeca" />
            <Label
                Margin="0,682,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="(USUARIO)" />
        </Grid>
    </Grid>
</Page>
