<Page
    x:Class="TheSkibiditecaApp.Windows.BookManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheSkibiditecaApp.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BookManager"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">
    <Grid>
        <Grid
            Width="350"
            MinWidth="240"
            MinHeight="400"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            Background="#FF4C0092">
            <StackPanel Margin="0,200,0,30">
                <Button
                    x:Name="but_newBook"
                    Click="but_newbook_Click"
                    Style="{StaticResource BT_BarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="17,0,0,0" Source="/Images/Icons/plus.png" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalContentAlignment="Center"
                            Content="Añadir libro" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="but_borrow"
                    Click="but_borrow_Click"
                    Style="{StaticResource BT_BarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="17,0,0,0" Source="/Images/Icons/borrow.png" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalContentAlignment="Center"
                            Content="Préstamos" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Label
                Margin="0,76,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="(LOGO) Skibiditeca" />
            <Border
                Margin="20,0,20,40"
                Padding="15"
                VerticalAlignment="Bottom"
                Style="{StaticResource BOR_ContBorder}">
                <DockPanel>
                    <Image
                        x:Name="img_profile"
                        Width="50"
                        HorizontalAlignment="Left"
                        Source="/Images/Profiles/pedrocraft.png"
                        Style="{StaticResource IMG_Circular}" />
                    <Label
                        x:Name="lab_user"
                        Margin="30,0,0,0"
                        VerticalAlignment="Center"
                        Content="User"
                        FontSize="23" />
                </DockPanel>
            </Border>
        </Grid>
        <Frame
            x:Name="fra_actPage"
            Margin="350,0,0,0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Page>
