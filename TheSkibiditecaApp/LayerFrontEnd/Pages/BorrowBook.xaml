<Page
    x:Class="TheSkibiditecaApp.Windows.BorrowBook"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheSkibiditecaApp.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="BorrowBook"
    MinWidth="1016"
    MinHeight="719"
    mc:Ignorable="d">
    <Grid>
        <!--  Background cuando  -->
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" />
                            <SkewTransform CenterX="0.5" CenterY="0.5" />
                            <RotateTransform Angle="-198.435" CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Offset="1" Color="#FFD599F3" />
                    <GradientStop Offset="0" Color="#FF1600B5" />
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Canvas RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Canvas.RenderTransform>
            <Canvas.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.309" Color="#FFCB99F3" />
                    <GradientStop Offset="1" Color="#FF5600FF" />
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" />
                            <SkewTransform CenterX="0.5" CenterY="0.5" />
                            <RotateTransform Angle="-43.531" CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Offset="0.067" Color="#00000000" />
                    <GradientStop Offset="1" Color="#FF0083B8" />
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <!--  header  -->
        <StackPanel>
            <TextBlock Style="{StaticResource TXT_Header1}" Text="Nuevo Prestamo" />
            <TextBlock Style="{StaticResource TXT_Header2}" Text="Préstamo:" />
            <Border Style="{StaticResource BOR_ContBorder}">
                <StackPanel>
                    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TXT_Info}" Text="ID del libro" />
                        <TextBox x:Name="tb_idBook" Style="{StaticResource TB_Register}" />
                    </StackPanel>
                    <StackPanel
                        Margin="0,15,0,0"
                        HorizontalAlignment="Stretch"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TXT_Info}" Text="Fecha del préstamo" />
                        <DatePicker
                            x:Name="dp_idBook"
                            SelectedDate="{x:Static sys:DateTime.Now}"
                            Style="{StaticResource DP_DateReg}" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <TextBlock Style="{StaticResource TXT_Header2}" Text="Estudiante:" />
            <Border Style="{StaticResource BOR_ContBorder}">
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource TXT_Info}" Text="Código del estudiante" />
                    <TextBox x:Name="tb_idStudent" Style="{StaticResource TB_Register}" />
                </StackPanel>
            </Border>
            <Button Content="Confirmar" Style="{StaticResource BT_Confirm}">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Page>
