<Page
    x:Class="TheSkibiditecaApp.Windows.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheSkibiditecaApp.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:LayerFrontEnd.Controls.Backgrounds"
    Title="Login"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">

    <Grid>
        <!--  El fondo pes  -->
        <uc:BCK_Login />
        <!--  Login  -->
        <Image
            x:Name="img_profile"
            Width="150"
            Height="150"
            Margin="0,80,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="1"
            ScrollViewer.CanContentScroll="True"
            Source="/Images/pedrocraft.png">
            <Image.OpacityMask>
                <RadialGradientBrush>
                    <GradientStop Offset="1" Color="White" />
                    <GradientStop Offset="1" />
                </RadialGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Border
            Margin="480,160,480,100"
            BorderBrush="Black"
            BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="10"
                    Opacity="0.8"
                    RenderingBias="Quality"
                    ShadowDepth="1"
                    Color="Black" />
            </Border.Effect>
            <Grid>
                <TextBox
                    x:Name="tb_user"
                    Width="200"
                    Margin="70,150,55,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Style="{StaticResource TB_LoginStyle}"
                    Text="Usuario"
                    TextWrapping="Wrap" />
                <PasswordBox
                    x:Name="pb_password"
                    Width="200"
                    Margin="70,250,70,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Style="{StaticResource PB_LoginStyle}" />
                <Button
                    x:Name="but_login"
                    Margin="0,0,0,100"
                    Padding="20,5,20,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Center"
                    Click="but_login_Click"
                    Content="Iniciar sesión"
                    FontSize="20"
                    Style="{StaticResource BT_LoginStyle}" />
            </Grid>
        </Border>
    </Grid>
</Page>
