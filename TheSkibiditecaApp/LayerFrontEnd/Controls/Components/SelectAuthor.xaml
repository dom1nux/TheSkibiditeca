<UserControl
    x:Class="LayerFrontEnd.Controls.Components.SelectAuthor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LayerFrontEnd.Controls.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="190"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <StackPanel>
        <DataGrid
            x:Name="dg_authorData"
            Height="160"
            Loaded="dg_authorData_Loaded"
            SelectionChanged="dg_authorData_SelectionChanged"
            SelectionMode="Extended"
            Style="{StaticResource DG_DataInfo}" />
        <TextBox
            x:Name="tb_authorInfo"
            Width="160"
            HorizontalAlignment="Left"
            IsReadOnly="True"
            Style="{StaticResource TB_Register}" />
    </StackPanel>
</UserControl>
